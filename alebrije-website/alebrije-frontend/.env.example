# Solana Network Configuration
# Replace with your actual RPC URLs if using a custom node
SOLANA_RPC_URL=https://api.devnet.solana.com
SOLANA_WS_URL=wss://api.devnet.solana.com
SOLANA_NETWORK=devnet

# Token Configuration
# Your Alebrije token mint address
TOKEN_MINT_ADDRESS=AHstXMQM3uWETKn3WaztgayZtQhB7iJiPTvqmVi7cbC
TOKEN_DECIMALS=9
TOKEN_TOTAL_SUPPLY=9000000000

# Token Distribution (in percentages)
# These values should match your token distribution plan
TOKEN_SOURCE_PERCENTAGE=15
TOKEN_LIQUIDITY_PERCENTAGE=35
TOKEN_AIRDROP_PERCENTAGE=15
TOKEN_MARKETING_PERCENTAGE=35
TOKEN_ECOSYSTEM_PERCENTAGE=15
TOKEN_FOUNDERS_PERCENTAGE=35

# API Configuration
# Replace with your actual API endpoints
BACKEND_API_URL=https://api.alebrije.io
INDEXER_API_URL=https://indexer.alebrije.io

# Feature Flags
# Enable/disable features as needed
ENABLE_STAKING=true
ENABLE_SWAPPING=false
ENABLE_NFT_SUPPORT=false

# Deployment Configuration
# Get these from your Netlify dashboard
NETLIFY_SITE_ID=your-site-id
NETLIFY_AUTH_TOKEN=your-auth-token

# Security
# Never commit the actual .env file with real values
# Keep these values secure and private
WALLET_PRIVATE_KEY=your-private-key-here
MINT_AUTHORITY_KEY=your-mint-authority-key-here

# Optional: Analytics and Monitoring
# Add your tracking IDs if needed
GOOGLE_ANALYTICS_ID=your-ga-id
SENTRY_DSN=your-sentry-dsn

